@{
    ViewData["Title"] = ViewBag.RoomTitle;
    //https://help.syncfusion.com/aspnet-core/schedule/getting-started
    //https://help.syncfusion.com/aspnet-core/schedule/resources
}

@using Syncfusion.JavaScript;
<form asp-controller="Home" asp-action="ChooseRoom" method="post">
    <input type="submit" value="Room1" name="room" />
    <input type="submit" value="Room2" name="room" />
    <input type="submit" value="Room3" name="room" />
    <input type="submit" value="Room4" name="room" />
    <input type="submit" value="Room5" name="room" />
    <input type="submit" value="Room6" name="room" />
    <input type="submit" value="Room7" name="room" />
    <input type="submit" value="Room8" name="room" />
</form>

<div>
    <ej-schedule id="Schedule1" width="100%" height="200px" current-date="@ViewBag.CurrentDate" orientation="Horizontal" show-weekend="false" start-hour="8" end-hour="18" time-zone="UTC +13:00" is-dst="true">

        <e-categorize-settings enable="true" datasource="@ViewBag.categorizeData" allow-multiple="true" id="id" color="color" font-color="fontColor" text="text"></e-categorize-settings>

        <e-appointment-settings id="Id" subject='"subject"' start-time='"startTime"' end-time='"endTime"' all-day='"AllDay"' recurrence='"Recurrence"' recurrence-rule='"RecurrenceRule"' description='"Description"' categorize='"Categorize"' resource-fields='"RoomId"'>
            <e-datamanager url="Home/GetData" crud-url="Home/Batch" adaptor="UrlAdaptor"></e-datamanager>
        </e-appointment-settings>
    </ej-schedule>
</div>


